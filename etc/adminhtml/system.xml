<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="../../../../Magento/Config/etc/system_file.xsd">
    <system>
        <section id="glugox" showInDefault="1" showInWebsite="1" showInStore="1">
            <tab>glugox</tab>
            <label>Integration</label>
            <resource>Magento_Config::config</resource>
            <group id="integration" showInDefault="1">
                <label>General Settings</label>
                <field id="enabled" translate="label" type="select" sortOrder="10" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Enabled</label>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                </field>
            </group>
            <group id="integration_activity" showInDefault="1">
                <label>Activity Settings</label>
                <field id="current" translate="label" type="label" sortOrder="10" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Current integration running</label>
                </field>
            </group>
        </section>
    </system>
</config>
